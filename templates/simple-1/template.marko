div class="simple-1" style="background-color: blue; border: 1px solid black"
    div.colors
        span.hello
            -- Hello ${input.name}! <strong>You have $!{input.messageCount} messages!</strong>
        ul if(input.colors.length)
            li.color style="background-color: ${color}" for(color in input.colors | array)
                -- ${color}
        div else
            -- No colors!
    button type="button" class=(input.primary ? 'primary' : 'secondary') -- ${input.buttonLabel}